/// Sales fact table
/// Transaction-level sales data

table Sales
    lineageTag: sales-001

    column TransactionID
        dataType: string
        isKey: true
        lineageTag: sales-txnid

    column TransactionDate
        dataType: dateTime
        formatString: Short Date
        lineageTag: sales-date

    column StoreID
        dataType: string
        lineageTag: sales-storeid

    column ProductID
        dataType: string
        lineageTag: sales-prodid

    column CustomerID
        dataType: string
        lineageTag: sales-custid

    column Quantity
        dataType: int64
        lineageTag: sales-qty

    column UnitPrice
        dataType: decimal
        formatString: "$#,0.00"
        lineageTag: sales-price

    column Discount
        dataType: decimal
        formatString: "$#,0.00"
        lineageTag: sales-discount

    column TotalAmount
        dataType: decimal
        formatString: "$#,0.00"
        lineageTag: sales-total

    column TotalCost
        dataType: decimal
        formatString: "$#,0.00"
        lineageTag: sales-cost
